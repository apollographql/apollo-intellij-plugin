<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.apollographql.akip</id>
    <name>Apollo Kotlin IntelliJ Plugin</name>
    <vendor>Apollo GraphQL</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.apollographql.akip.services.AkipApplicationService"/>
        <projectService
                serviceInterface="com.apollographql.akip.services.ApolloProjectService"
                serviceImplementation="com.apollographql.akip.services.internal.ApolloProjectServiceImpl"
        />

        <codeInsight.lineMarkerProvider language="UAST"
                                        implementationClass="com.apollographql.akip.navigation.OperationUsageMarkerProvider"/>

    </extensions>

    <applicationListeners>
        <listener class="com.apollographql.akip.listeners.AkipProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
